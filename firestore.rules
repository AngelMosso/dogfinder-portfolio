rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Usuarios: Solo usuarios registrados pueden ver perfiles y medallas
    match /users/{userId} {
      allow read: if request.auth != null; 
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 2. Avistamientos: Lectura pública es necesaria para que la comunidad vea los perros perdidos.
    // Escritura solo para usuarios registrados.
    match /sightings/{sightingId} {
      allow read: if true; 
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status'])
      );
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // 3. Feedback: Solo creación.
    match /app_feedback/{feedbackId} {
      allow create: if true;
      allow read: if false;
    }

    // 4. Mapeo de Emails (Si se usa para búsqueda rápida)
    match /user_emails/{email} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
